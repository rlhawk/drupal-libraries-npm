{
  "copyFiles": [
    {
      "//": "--- Clipboard.js ---",
      "from": "node_modules/clipboard/dist/clipboard.min.js",
      "to": "web/libraries/clipboard/clipboard.min.js"
    },
    {
      "//": "--- Colorbox ---",
      "from": "node_modules/jquery-colorbox/jquery.colorbox-min.js",
      "to": "web/libraries/colorbox/jquery.colorbox-min.js"
    },
    {
      "//": "--- Cropper ---",
      "from": [
        "node_modules/cropper/dist/cropper.min.js",
        "node_modules/cropper/dist/cropper.css"
      ],
      "to": "web/libraries/cropper/",
      "toFlat": true
    },
    {
      "//": "--- Dropzone ---",
      "from": [
        "node_modules/dropzone/dist/min/dropzone.min.js",
        "node_modules/dropzone/dist/dropzone.css"
      ],
      "to": "web/libraries/dropzone/dist/",
      "toFlat": true
    },
    {
      "//": "--- Slick ---",
      "from": [
        "node_modules/slick-carousel/slick/slick.min.js",
        "node_modules/slick-carousel/slick/*.css"
      ],
      "to": "web/libraries/slick/slick/",
      "toFlat": true
    },
    {
      "from": [
        "node_modules/slick-carousel/slick/fonts/*"
      ],
      "to": "web/libraries/slick/slick/fonts/",
      "toFlat": true
    },
    {
      "//": "--- Blazy ---",
      "from": "node_modules/blazy/blazy.min.js",
      "to": "web/libraries/blazy/blazy.min.js"
    },
    {
      "//": "--- Chosen ---",
      "from": [
        "node_modules/chosen-js/*.js",
        "node_modules/chosen-js/*.css",
        "node_modules/chosen-js/*.png",
        "!node_modules/chosen-js/chosen.proto.*"
      ],
      "to": "web/libraries/chosen/",
      "toFlat": true
    },
    {
      "//": "--- Stickybits ---",
      "from": "node_modules/stickybits/dist/jquery.stickybits.js",
      "to": "web/libraries/stickybits/jquery.stickybits.js"
    },
    {
      "//": "--- Open Sans font ---",
      "from": "node_modules/typeface-open-sans/index.css",
      "to": "web/libraries/typeface-open-sans/index.css"
    },
    {
      "from": "node_modules/typeface-open-sans/files/*",
      "to": "web/libraries/typeface-open-sans/files/",
      "toFlat": true
    },
    {
      "//": "--- Roboto font ---",
      "from": "node_modules/typeface-roboto/files/*",
      "to": "web/themes/custom/example_theme/fonts/roboto/",
      "toFlat": true
    }
  ],
  "settings": {
    "whenFileExists": "overwrite"
  }
}
